generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          String   @id @default(uuid())
  oid         String   @unique
  email       String   @unique(map: "email") @db.VarChar(50)
  first_name  String   @db.VarChar(50)
  last_name   String?  @db.VarChar(50)
  roll_number String   @unique(map: "roll_number") @db.VarChar(10)
  branch      String   @db.VarChar(100)
  semester    Int      @db.UnsignedTinyInt
  image_url   String?  @db.VarChar(200)
  batch       DateTime @db.Date
  
  attendance_logs   attendance_logs[]
  course_attendance course_attendance[]
}

model attendance_logs {
  id           String   @id @default(uuid())
  user_id      String
  course_code  String   @db.VarChar(6)
  lecture_date DateTime @db.Date
  start_time   DateTime
  end_time     DateTime
  status       attendance_logs_status?

  courses      courses  @relation(fields: [course_code], references: [course_code], onDelete: Cascade, onUpdate: Restrict, map: "fk_logs_course")
  users        users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "fk_logs_user")

  @@unique([user_id, course_code, start_time], map: "unique_log_entry")
  @@index([course_code], map: "fk_logs_course")
  @@index([user_id, lecture_date], map: "idx_user_lecture_date")
}

model course_attendance {
  user_id       String
  course_code   String   @db.VarChar(6)
  present_total Int      @default(0) @db.UnsignedInt
  absent_total  Int      @default(0) @db.UnsignedInt
  medical_total Int      @default(0) @db.UnsignedInt
  total_classes Int      @default(45) @db.UnsignedInt
  
  courses       courses  @relation(fields: [course_code], references: [course_code], onDelete: Cascade, onUpdate: Restrict, map: "fk_attendance_course")
  users         users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "fk_attendance_user")

  @@id([user_id, course_code])
  @@index([course_code], map: "fk_attendance_course")
}

model courses {
  course_code   String   @id @db.VarChar(6)
  course_name   String   @db.VarChar(150)
  semester      Int      @db.UnsignedTinyInt
  branch        String   @db.VarChar(100)
  
  attendance_logs   attendance_logs[]
  course_attendance course_attendance[]
}

enum attendance_logs_status {
  present
  absent
  medical
  cancelled
}
